@model Book.Naergaga.Models.ViewModel.CategoryViewModel
<div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4>delete Category</h4>
            </div>
            <div class="modal-body">
                <h3>delete the <span class="badge">@Model.Name</span> Category?</h3>
                <hr />
                <div>
                    <p><span class="text-danger">@Model.BookCount</span>本书使用这个Category.</p>
                </div>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete"))
                {
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
