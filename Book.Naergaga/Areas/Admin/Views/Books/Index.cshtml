@model Book.Naergaga.Models.AdminView.IndexViewModel<Book.Naergaga.Models.Entity.EBook>
@using Book.Naergaga.Extensions
@{
    ViewBag.Title = "Index";
    var list = Model.List;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="col-sm-6">
    @using (Html.BeginForm("Search", "Books", FormMethod.Get))
    {
        <div class="input-group">
            <input type="text" class="form-control" name="keyword" />
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
            </span>
        </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            author
        </th>
        <th>
            category
        </th>
        <th>
            book name
        </th>
        <th>
            post time
        </th>
        <th>
            fileSize
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

@foreach (var item in list) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Author.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.Paging(Model.Option, "Index", "Book",Model.RouteData)
